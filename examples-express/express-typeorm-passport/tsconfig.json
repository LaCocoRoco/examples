{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "src",
    "moduleResolution": "node",
    "outDir": "./build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "typeRoots": [
      "src/@types",
      "node_modules/@types",
    ]
  }
}